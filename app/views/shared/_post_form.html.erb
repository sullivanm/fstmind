<div class="row">
	<aside class="span1">
     <button id="show">Add Image</button> 
    </aside>
    <%= form_for Post.new, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="editor">
    <%= f.text_area :content, size: '100', placeholder: "New Post.." %>
  </div>
  <div class='tweet_btn'>
    <%= f.file_field :image %>
  </div>
  <div><%= f.submit "Post", class: "btn btn-large btn-primary" %></div>
  
<% end %>
</div>

<div class = 'container'>
  <div class = 'row' >
    <% @posts.each do |post| %>
    <div class = 'col-md-3'>
      <div class = 'thumbnail'>
        <p class> <strong><%= post.user.first_name %></strong></p>
        <h3><%= post.content %> </h3>
        <%= image_tag post.image %>
        <%= link_to post.comments.count, post %>Comments
      </div>
    </div>
    <%end %>
  </div>
</div>


<script>
$(document).ready(function(){
  $("#show").click(function(){
    $("div.tweet_btn").show();
    $("#show").hide();
  });
});

$(document).ready(function(){
$('#editor').wysiwyg();
});
</script>


