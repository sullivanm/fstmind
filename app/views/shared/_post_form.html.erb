<div class="row">
	<aside class="span1">
     <button id="show">Add Image</button> 
    </aside>
    <%= form_for Post.new, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="editor">
    <%= f.text_area :content, size: '100', placeholder: "New Post.." %>
  </div>
  <div class='tweet_btn'>
    <%= f.file_field :image %>
  </div>
  <div><%= f.submit "Post", class: "btn btn-large btn-primary" %></div>
  
<% end %>
</div>

<div class = 'container'>
  <div class = 'row' >
    <% @posts.each do |post| %>
      <div class = 'thumbnail'>
        <div class='gravtar'>
          <%= gravatar_for(current_user, size: 52) %>
          <strong><%= post.user.first_name %></strong>
        </div>
        <h5><%= post.content %> </h5>
          <%= image_tag post.image %>
          <%= link_to 'show', post %> | <div class="fb-like" data-href="http://0.0.0.0:3000/posts/#{post_id}" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div> | <div class="fb-share-button" data-href="http://0.0.0.0:3000/posts/#{post_id}" data-type="button_count"></div>
      </div>
      <div>
          <h4>Comments</h4>
            <% for comment in post.comments %>
            <div id="comments">
              <%= div_for(comment) do %>
              <div class='gravtar'><%= gravatar_for(current_user, size: 52) %>
              <strong><%= comment.user.first_name if comment.user%></strong> Commented <%= time_ago_in_words(comment.created_at) %> ago </br></div>
              <div class='com'><%= h(comment.body) %></div>
              <% end %>
            <% end %>
            </div> 
      </div>
      <div class="comment">
          <%= form_for [post, Comment.new] do |f| %>
            
              <%= f.text_area :body, size: '100', placeholder: "Comment Here" %>
              <!-- <%= f.file_field :image %>-->
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.submit "Comment", class: "btn btn-primary" %>
        <% end %>
      </div>
    <%end %>
  </div>
</div>

<script>
$(document).ready(function(){
  $("#show").click(function(){
    $("div.tweet_btn").show();
    $("#show").hide();
  });
});

$(document).ready(function(){
$('#editor').wysiwyg();
});
</script>


