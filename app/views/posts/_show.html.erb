
<p>
  <strong>Posts:</strong>
  <%= @post.content %>
</p>
<p><strong>Image:</strong>
  <div class="imag"><%= image_tag @post.image %></div>
<%= link_to 'Back', posts_path %> | <div class="fb-like" data-href="http://0.0.0.0:3000/posts/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div> | <div class="fb-share-button" data-href="http://0.0.0.0:3000/posts/" data-type="button_count"></div>

<h4>Comments</h4>
	<div id="comments">
		<%= render :partial => @post.comments %>
	</div>
		<%= form_for [@post, Comment.new] do |f| %>
			<p>
				<%= f.text_area :body, size: '100', placeholder: "Comment Here" %>
			</p>
	<p><%= f.submit "Add Comment", class: "btn btn-primary" %></p>
	<% end %>


