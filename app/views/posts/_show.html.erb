<div class ='container', align='center'>
	<div class ='row'>
	    <div class ='thumbnail'>
	        <h3><%= @post.content %> </h3>
	        <%= image_tag @post.image %>
	        <div class="fb-like" data-href="http://0.0.0.0:3000/posts/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div> | <div class="fb-share-button" data-href="http://0.0.0.0:3000/posts/" data-type="button_count"></div>
		
			<div align='left'>	
				<h4>Comments</h4>
				<div id="comments">
				<%= render :partial => @post.comments %>
				</div>
				<div class="comment">
					<%= form_for [@post, Comment.new] do |f| %>
					<%= f.text_area :body, size: '100', placeholder: "Comment Here" %>
					<%= f.submit "Comment", class: "btn btn-primary" %> | <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
					<% end %> 
				</div> 
				 
			</div>
		</div>
	</div>
</div>


